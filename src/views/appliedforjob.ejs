<% if(seekers){ %>
    <div class="container my-5" style="background-color: white;">
        <h2 class="text-center">Job Seekers</h2>
        <!-- Table to display the seekers -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>

                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Resume File</th>
                </tr>
            </thead>
            <tbody>
                <!-- Iterate through the seekers array -->
                <% seekers.forEach((seeker, index)=> { %>
                    <tr>
                        <td>
                            <%= seeker.id %>
                        </td>

                        <td>
                            <%= seeker.name %>
                        </td>
                        <td>
                            <%= seeker.email %>
                        </td>
                        <td>
                            <%= seeker.phone %>
                        </td>
                        <td>

                            <a href="<%= seeker.resumefile %>" download><button>Download Resume</button></a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    <%}%>